<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.AgendaPageController">
    <VBox layoutX="60.0" layoutY="36.0" spacing="10.0">
        <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Register an Entry" />
        <DatePicker fx:id="dateField" promptText="Date:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
        <ChoiceBox fx:id="selectTask" prefHeight="26.0" prefWidth="180.0" />
        <ListView fx:id="entryListView" prefHeight="150.0" prefWidth="180.0" />
        <Button fx:id="confirm_register" onAction="#handleAddButtonAction" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Register Task" />
        <Button fx:id="back_button" onAction="#handleGOBACK" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Back" />
    </VBox>
    <ListView fx:id="toDoListListView" layoutX="300.0" layoutY="50.0" prefHeight="300.0" prefWidth="250.0" />
</AnchorPane>

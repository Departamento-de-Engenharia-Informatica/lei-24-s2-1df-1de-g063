<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="pt.ipp.isep.dei.esoft.project.ui.console.AssignSkillUIFX"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Select Collaborator:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="collaboratorComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Select Skill:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="skillComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Add Skill" onAction="#addSkill" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    <ListView fx:id="selectedSkillsListView" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2"/>

    <Button text="Submit" onAction="#submitData" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>

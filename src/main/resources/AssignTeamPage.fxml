<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.AssignTeamPageController">
    <VBox stylesheets="@Styles.css">
        <Label fx:id="titleLabel" text="Assign Team to Entry" styleClass="title-label"/>
        <HBox spacing="10.0">
            <VBox>
                <Label text="Teams" styleClass="list-label"/>
                <ListView fx:id="teamListView" styleClass="list-view"/>
            </VBox>
            <VBox>
                <Label text="Entries" styleClass="list-label"/>
                <ListView fx:id="entryListView" styleClass="list-view"/>
            </VBox>
        </HBox>
        <Button fx:id="confirmButton" text="Confirm" onAction="#confirmSelection" styleClass="confirm-button"/>
    </VBox>
</VBox>

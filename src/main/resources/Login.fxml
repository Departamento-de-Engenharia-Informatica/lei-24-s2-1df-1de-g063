<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.LoginController" style="-fx-background-color: #f0f0f0; -fx-padding: 30;">
    <Label fx:id="welcomeLabel" prefHeight="89.0" prefWidth="202.0" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Welcome to SmartGreen" />
    <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5;" />
</VBox>

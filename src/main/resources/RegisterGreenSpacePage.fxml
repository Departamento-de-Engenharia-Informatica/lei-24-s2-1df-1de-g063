    <Label fx:id="welcomeLabel" layoutX="52.0" layoutY="44.0" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Register Green Space" />
    <TextField fx:id="managerField" blendMode="SRC_ATOP" layoutX="60.0" layoutY="90.0" promptText="Manager Name:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <TextField fx:id="nameField" blendMode="SRC_ATOP" layoutX="60.0" layoutY="133.0" promptText="Green Space Name:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <TextField fx:id="areaField" blendMode="SRC_ATOP" layoutX="60.0" layoutY="175.0" promptText="Area:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <ChoiceBox fx:id="selectSize" layoutX="60.0" layoutY="229.0" prefHeight="26.0" prefWidth="180.0" />
    <Button fx:id="confirm_register" layoutX="60.0" layoutY="275.0" onAction="#registerGreenSpace" prefHeight="42.0" prefWidth="180.0" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Register Green Space" />
    <Button fx:id="next_button" layoutX="60.0" layoutY="350.0" onAction="#handleGOBACK" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Back" />
    <ListView fx:id="greenSpaceListView" layoutX="300.0" layoutY="50.0" prefHeight="300.0" prefWidth="250.0" />
</AnchorPane>

<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.TaskAssignedToCollaboratorController">
    <Label layoutX="32.0" layoutY="50.0" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Task Assigned to Collaborator" />
    <TextField fx:id="nameField" layoutX="60.0" layoutY="100.0" promptText="Collaborator Name:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <DatePicker fx:id="startDatePicker" layoutX="60.0" layoutY="200.0" prefHeight="52.0" prefWidth="179.0" promptText="Start Date:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <DatePicker fx:id="endDatePicker" layoutX="60.0" layoutY="300.0" prefHeight="52.0" prefWidth="179.0" promptText="End Date:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <TextField fx:id="statusField" layoutX="60.0" layoutY="400.0" prefHeight="42.0" prefWidth="179.0" promptText="Status:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <Button fx:id="loadEntriesButton" layoutX="60.0" layoutY="483.0" onAction="#loadEntries" prefHeight="42.0" prefWidth="180.0" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Load Entries" />
    <ListView fx:id="entryListView" layoutX="300.0" layoutY="50.0" prefHeight="522.0" prefWidth="250.0" />
    <Button fx:id="backButton" layoutX="60.0" layoutY="544.0" onAction="#goBack" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Back" />
</AnchorPane>

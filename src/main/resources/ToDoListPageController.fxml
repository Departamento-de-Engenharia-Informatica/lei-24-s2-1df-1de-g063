<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.ToDoListPageController">
    <Label fx:id="welcomeLabel" layoutX="60.0" layoutY="36.0" style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Register an Entry" />
    <TextField fx:id="taskField" layoutX="60.0" layoutY="81.0" promptText="Task description:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <TextField fx:id="durationField" layoutX="60.0" layoutY="133.0" promptText="Duration in hours:" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" />
    <ChoiceBox fx:id="selectUrgency" layoutX="60.0" layoutY="187.0" prefHeight="26.0" prefWidth="180.0"/>
    <ChoiceBox fx:id="selectGreenSpace" layoutX="60.0" layoutY="233.0" prefHeight="26.0" prefWidth="180.0"/>
    <Button fx:id="confirm_register" layoutX="60.0" layoutY="290.0" onAction="#registerEntry" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Register Task" />
    <Button fx:id="back_button" layoutX="60.0" layoutY="350.0" onAction="#handleGOBACK" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Back" />
    <ListView fx:id="toDoListListView" layoutX="300.0" layoutY="50.0" prefHeight="300.0" prefWidth="250.0" />
</AnchorPane>
